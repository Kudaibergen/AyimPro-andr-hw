<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/red">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/frg1_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is Fragment 1"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:padding="0dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/frg1_btn1"
        android:layout_width= "match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="0dp"
        android:text="BTN 1"
        app:layout_constraintTop_toBottomOf="@id/frg1_txt"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/frg1_btn2"
        android:layout_width= "match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="0dp"
        android:text="BTN 2"
        app:layout_constraintTop_toBottomOf="@id/frg1_btn1"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/frg1_btn3"
        android:layout_width= "match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="0dp"
        android:text="BTN 3"
        app:layout_constraintTop_toBottomOf="@id/frg1_btn2"/>

</androidx.constraintlayout.widget.ConstraintLayout>